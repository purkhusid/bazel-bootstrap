{
    ////////
    // Go
    ////////
    "go.useLanguageServer": false,
    "go.vetOnSave": "package",
    "go.buildOnSave": "package",
    "gopls": {
        "directoryFilters": [
            "-",
            "+src/go"
        ],
        "expandWorkspaceToModule": true,
        "importShortcut": "Definition",
    },
    //////////////
    // TypeScript
    //////////////
    "editor.codeActionsOnSave": {
        "source.fixAll": true
    }
}