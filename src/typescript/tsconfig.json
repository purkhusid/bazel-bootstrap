{
    "compilerOptions": {
      "declaration": true,
      "target": "es2018",
      "module": "commonjs",
      "lib": [
        "ESNext.AsyncIterable",
        "ES2018",
        "ES2019.Array",
        "DOM",
        "ES6"
      ],
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        // To enable IDE autocomplete for generated sources
        "monorepo/*": [
          "../../*",
          "../../bazel-bin/*"
        ],
        // Fix autocomplete for generated protobuf
        "google-protobuf": [
          "./node_modules/@types/google-protobuf"
        ]
      },
      "removeComments": true,
      "strict": true,
      "esModuleInterop": true,
      "downlevelIteration": true,
      "forceConsistentCasingInFileNames": true
    }
  }
  